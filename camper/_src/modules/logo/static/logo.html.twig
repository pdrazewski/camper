{% set logoh1 = logoh1|default('') %}
{% set service = service|default('') %}
{% set breakpoint = breakpoint|default('800') %}
{% set adClass = adClass|default('') %}
{% set inverseLogo = inverseLogo|default(false) %}
{% set path = path|default("common/images/logos/logo.png") %}
{% set pathFallback = pathFallback|default("common/images/logos/logo.png") %}
{% set pathRetina = pathRetina|default("common/images/logos/logo@2x.png") %}
{% if inverseLogo == true %}
	{% set path = "common/images/logos/logo-inv.png" %}
	{% set pathRetina = "common/images/logos/logo-inv@2x.png" %}
{% endif %}
{% set svg = svg|default(false)%}

<div itemscope itemtype="http://schema.org/Organization" class="m-logo {{adClass}}">
	{% if logoh1 == true %}
		<h1>
	{% endif %}
	<a itemprop="url" href="/www/shop/{{service}}">
		{% if svg == true %}
			<img src="{{path}}" alt="{{service}}">
		{% else %}
			<span data-picture data-alt="{{service}}">
				<span data-src="{{pathRetina}}"></span>
				<span data-src="{{path}}" data-media="(min-width: {{breakpoint}}px)">
					<img src="{{path}}" alt="{{service}}">
				</span>
				<noscript>
					<img src="{{path}}" alt="{{service}}">
				</noscript>
			</span>
		{% endif %}
	</a>
	{% if logoh1 == true %}
		</h1>
	{% endif %}
</div>
